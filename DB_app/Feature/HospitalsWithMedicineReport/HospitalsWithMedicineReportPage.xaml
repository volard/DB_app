<Page
    x:Class="DB_app.Views.HospitalsWithMedicineReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:DB_app.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:DB_app.ViewModels"
    mc:Ignorable="d">



    <!--#region Header-->
    <behaviors:NavigationViewHeaderBehavior.HeaderTemplate>
        <DataTemplate x:DataType="viewModel:MedicineInHospitalReportViewModel">
            <RelativePanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <TextBlock
                    RelativePanel.AlignLeftWithPanel="True"
                    Style="{ThemeResource TitleTextBlockStyle}"
                    Text="Hospitals with medicine" />
                <CommandBar
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    DefaultLabelPosition="Right"
                    RelativePanel.AlignRightWithPanel="True">

                    <CommandBar.Content>
                        <StackPanel Orientation="Horizontal">

                            <ProgressRing Margin="0,0,20,0" IsActive="{x:Bind IsHospitalsLoading, Mode=OneWay}" />

                            <ComboBox
                                x:Name="HospitalsComboBox"
                                Height="38"
                                MinWidth="400"
                                ItemsSource="{x:Bind AvailableHospitals, Mode=OneWay}"
                                SelectedItem="{x:Bind SelectedHospital, Mode=TwoWay}"
                                SelectionChanged="HospitalComboBox_SelectionChanged" />


                        </StackPanel>

                    </CommandBar.Content>


                    <AppBarButton
                        x:Name="CommandBarExportButton"
                        Margin="20,0,0,0"
                        Background="Green"
                        Icon="Manage"
                        Label="Export"
                        ToolTipService.ToolTip="Export" />


                </CommandBar>
            </RelativePanel>

        </DataTemplate>
    </behaviors:NavigationViewHeaderBehavior.HeaderTemplate>
    <!--#endregion-->


    <StackPanel Orientation="Vertical">

        <InfoBar
            Title="Title"
            Margin="0,0,0,20"
            IsClosable="False"
            IsOpen="True"
            Message="Here listed all available medicines in specified hospital"
            Severity="Informational" />

        <Grid>



            <controls:DataGrid
                AutoGenerateColumns="False"
                CanUserResizeColumns="True"
                IsReadOnly="True"
                ItemsSource="{x:Bind ViewModel.Source, Mode=OneWay}">

                <controls:DataGrid.Resources>
                    <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundColor" Color="Transparent" />
                </controls:DataGrid.Resources>


                <controls:DataGrid.Columns>

                    <controls:DataGridTextColumn Binding="{Binding Pro}" Header="OrderID" />
                    <controls:DataGridTextColumn Binding="{Binding OrderDate}" Header="OrderDate" />
                    <controls:DataGridTextColumn Binding="{Binding Company}" Header="Company" />

                </controls:DataGrid.Columns>


            </controls:DataGrid>

            <ProgressBar
                Margin="0,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                IsIndeterminate="True" />
        </Grid>
    </StackPanel>
</Page>
