<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:primitives="using:CommunityToolkit.WinUI.UI.Controls.Primitives"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  DataGrid style  -->
    <Style TargetType="toolkit:DataGrid" x:Key="DataGridStyle1">
        <Setter Property="ColumnHeaderStyle" Value="{StaticResource ColumnHeaderStyle1}" />
        <Setter Property="GridLinesVisibility" Value="Vertical"></Setter>
    </Style>

    <!--  DataGridColumnHeader style  -->
    <Style TargetType="primitives:DataGridColumnHeader" x:Key="ColumnHeaderStyle1">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="10"></Setter>
        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
    </Style>
</ResourceDictionary>
