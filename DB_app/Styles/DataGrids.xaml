<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:primitives="using:CommunityToolkit.WinUI.UI.Controls.Primitives"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls">

    <!--  DataGrid style  -->
    <Style x:Key="DataGridStyle1" TargetType="toolkit:DataGrid">
        <Setter Property="ColumnHeaderStyle" Value="{StaticResource ColumnHeaderStyle1}" />
    </Style>

    <!--  DataGridColumnHeader style  -->
    <Style x:Key="ColumnHeaderStyle1" TargetType="primitives:DataGridColumnHeader">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="14"/>
    </Style>
</ResourceDictionary>
